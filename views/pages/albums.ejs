<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Albums</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body {
      background-color: #f7f9fc;
      font-family: Arial, sans-serif;
    }
    .album-title {
      font-size: 1.5rem;
      font-weight: bold;
      color: #003366;
    }
    .album-description {
      font-size: 1rem;
      color: #555;
    }
    .carousel-item img {
      height: 300px;
      object-fit: cover;
    }
  </style>
</head>
<body>
  <div class="container mt-5">
    <h1 class="text-center mb-5" style="color: #003366;">Our Albums</h1>
    <div class="row">
      <% if (albums && albums.length > 0) { %>
        <% albums.forEach(album => { %>
          <div class="col-md-4">
            <div class="card mb-4 shadow-sm">
              <div class="card-body">
                <h5 class="album-title"><%= album.title %></h5>
                <p class="album-description"><%= album.description %></p>
              </div>
              <% if (album.images && album.images.length > 0) { %>
                <div id="carousel<%= album.id %>" class="carousel slide" data-bs-ride="carousel">
                  <div class="carousel-inner">
                    <% album.images.forEach((image, index) => { %>
                      <div class="carousel-item <%= index === 0 ? 'active' : '' %>">
                        <img src="/<%= image %>" class="d-block w-100" alt="Album Image">
                      </div>
                    <% }); %>
                  </div>
                  <a class="carousel-control-prev" href="#carousel<%= album.id %>" role="button" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                  </a>
                  <a class="carousel-control-next" href="#carousel<%= album.id %>" role="button" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                  </a>
                </div>
              <% } %>
            </div>
          </div>
        <% }); %>
      <% } else { %>
        <p class="text-center text-muted">No albums available at the moment.</p>
      <% } %>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
